set -e -x

if [ -z "$BOSH_PACKAGES_DIR" ]; then
	pkg_dir=$(readlink -nf /var/vcap/packages/golang_1.3.3)
else
	pkg_dir=$BOSH_PACKAGES_DIR/golang_1.3.3
fi

export GOROOT=$pkg_dir
export GOPATH=$PWD
export PATH=$GOROOT/bin:$PATH

mkdir $BOSH_INSTALL_TARGET/bin

echo "before copy src"

ls -la src/github.com/maximilien/bosh-softlayer-cpi/

mkdir ../src & cp -a * ../src/

echo "after copy src"

ls -la src/github.com/maximilien/bosh-softlayer-cpi/

echo "before mv"

mv ../src ./src

echo "after mv"

ls -la src/github.com/maximilien/bosh-softlayer-cpi/

src/github.com/maximilien/bosh-softlayer-cpi/bin/build-linux-amd64

mv src/github.com/maximilien/bosh-softlayer-cpi/out/cpi $BOSH_INSTALL_TARGET/bin/
