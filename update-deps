#!/bin/bash

set -e -x

export GOPATH=$PWD

deps=$PWD/deps.txt

rm -f $deps

cd src

# Remove all deps
find * -maxdepth 3 -type d | grep -v '^github.com\(/maximilien\(/bosh-softlayer-cpi.*\)*\)*$' | xargs rm -rf

#go get -d -t -v github.com/maximilien/bosh-softlayer-cpi/...

# todo why does -t flag dont work?
#go get github.com/onsi/ginkgo/ginkgo
#go get github.com/onsi/gomega

# Remove all .git folders
dirs=$(find * -type d -name '.git')

for dir in $dirs; do
  # Capture deps info
  echo "$(cd $dir/.. && git rev-parse --short HEAD) $dir" >> $deps

  # Remove .git directory
  rm -rf $dir
done
